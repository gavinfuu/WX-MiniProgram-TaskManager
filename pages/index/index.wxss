/**index.wxss**/
page {
  color: #80848f;
  background: #f3f3f3;
}

.user-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.loaded-user-container {
    display: none;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

/** salient **/

.salient-panel {
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    background: #149eff;
    padding: 30px 0 50px;
}

.salient-ctm {
    text-align: center;
    flex-shrink: 1;
    flex-grow: 1;
}

.salient-icon {
    width: 52px;
    height: 48px;
}

.salient-text {
    color: #ddd;
    font-size: 12px;
}

.salient-info-ctm {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #fff;
  margin: 0 0 30px;
  text-align: center;
}

.sign-text-c {
  color: #FFB814;
  font-weight: bold;
}

.label-text-c {
  color: #ddd;
}

.salient-nav-ctm {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 15px;
  padding: 15px 10px;
  background: #fff;
  font-size: 12px;
}

.boxing-tool {
  margin-top:-35px;
  box-shadow: 0 1px 6px rgba(0,0,0,.1);
}

.s-nav-item {
  padding: 10px;
}

.s-nav-item-icon {
  text-align: center;
  margin-bottom: 8px;
}

.s-nav-item-icon text {
  color: #149eff;
  font-size: 30px;
}

.quick-tool-ctm {
  margin: 15px;
  padding: 0 0 15px 0;
  background: #fff;
  font-size: 12px;
}

.quick-tool-title {
  font-size: 14px;
  padding: 12px 20px;
  border-bottom: 1px solid #f3f3f3;
}

.quick-tool-title:active {
  background: #e2e2e2;
  border-bottom: 1px solid #e2e2e2;
}

.s-nav-item-icon .sign-c {
  color: #FFB814;
}