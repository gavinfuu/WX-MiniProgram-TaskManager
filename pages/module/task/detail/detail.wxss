/* pages/module/task/detail.wxss */
@import '../tasklist.wxss';
@import '../../../search/search.wxss';

.gradient-top-left {
    background-image: -webkit-linear-gradient(to left top, #1ec2f5, #149eff);
    background-image: linear-gradient(to left top, #1ec2f5, #149eff);
}

.gradient-top-left text {
    color: #f3f3f3 !important;
}

.task-details {
    background: #fff;
}

.joint-ctm {
    margin: 15px 15px 0 15px;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}

.t-d-ctm {
    color: #80848f;
    font-size: 12px;
    padding: 0 0 10px 0;
}

.task-details {
    color: #495060;
    font-size: 14px;
    margin: 0 15px;
    padding: 20px;
    border-radius: 0 0 8px 8px;
}

.task-ds-i {
    font-size: 16px;
    font-weight: bold;
}

.task-i-icons {
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
    padding-top: 20px;
    overflow: hidden;
    overflow-x: auto;
}

.task-i-icons text {
    font-size: 24px;
}

.item-detail {
    border-top: 0.5px solid #e9eaec;
    padding: 10px 0 10px 0;
}

.task-i-icons .step-title {
    position: absolute;
    top: 0;
    left: 5px;
    z-index: 100;
    font-size: 14px;
    color: #80848f;
    line-height: 24px;
}

.step-details {
    position: absolute;
    top: -18px;
    font-size: 12px !important;
}

.task-i-step {
    position: relative;
    padding: 70px 15px 10px 15px;
    background: #f3f3f3;
    margin-right: 10px;
    border-radius: 8px;
}

.st-user {
    color: #80848f;
    font-size: 14px;
}

.st-time {
    margin-top: 5px;
    color: #bbbec4;
    font-size: 12px;
}

.st-type {
    position: absolute;
    top: -50px;
    left: 50%;
    margin-left: -62px;
}

.st-slider-b {
    margin-top: 10px;
    height: 8px;
    width: 100px;
    border-radius: 4px;
    border: .5px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.6);
}

.st-slider {
    position: absolute;
    bottom: 0.5;
    left: 15px;
    height: 7px;
    width: 65px;
    border-radius: 4px;
    border: .5px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.5);
    background-image: -webkit-linear-gradient(to right top, #5feaa4, #19be6b);
    background-image: linear-gradient(to right top, #5feaa4, #19be6b);
}