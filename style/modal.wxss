/*mask*/

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/

.drawer_box {
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 1001;
    width: 650rpx;
    overflow: hidden;
    margin: -230px 50rpx 0 50rpx;
    padding-bottom: 75px; 
}

.drawer_title {
    padding: 15px;
    font: 20px "microsoft yahei";
    text-align: center;
}

.drawer_content {
    padding: 20px;
    background: #fff;
    height: 350px;
    border-radius: 4px;
    overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.drawer_close {
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -20px;
    font-size: 50px;
    z-index: 1002;
    color: #fff;
}