/**app.wxss**/

page {
    height: 100%;
    background: #f8f8f8;
}

/**top search container**/

.top-search {
    display: flex;
    align-items: center;
    background: #149eff;
    padding: 5px 15px 8px 15px;
}

.top-search-item {
    width: 16px;
    flex-shrink: 0;
    flex-grow: 0;
    text-align: center;
    padding-right: 15px;
    color: #fff;
}

.top-search-ipt-c {
    flex-shrink: 1;
    flex-grow: 1;
}

.top-search-ipt-h {
    font-size: 16px;
    text-align: center;
    color: #6e92ac;
}

.top-search-ipt {
    position: relative;
    color: #149eff;
    font-size: 16px;
    background: #c6e7ff;
    border: 1px solid #96d2fd;
    border-radius: 8px;
    padding: 5px 15px;
    text-align: center;
}

.top-search-icon {
    position: absolute;
    left: 10px;
    top: 10px;
}

.top-search image {
    width: 16px;
    height: 16px;
}
